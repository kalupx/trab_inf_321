<div class="d-flex w-100">
    <!-- Partial Menu -->
    <div style="height: 100vh;">
        {{> menu}}
    </div>
    <div class="container-md d-flex justify-content-center align-items-center" style="height: 100vh;">
        <!-- Saudação e Formulário -->
        <div>
            <h1 class="display-4 text-white fw-bold text-center mb-4">Configurações</h1>
            <div class="card p-4 shadow" style="width: 24rem;">
                <form id="form" method="post" action="/updateUser">
                    <div class="mb-3" id="username-field">
                        <label for="username" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="username" placeholder="Digite seu nome de usuário" name="username" value="{{userData.nome}}" required>
                    </div>
                    <div class="mb-3" id="username-field">
                        <label for="username" class="form-label">Renda</label>
                        <input type="text" class="form-control" id="username" placeholder="Digite seu nome de usuário" name="renda" value="{{userData.renda}}" required>
                    </div>
                    <input type="hidden" value="{{userData.id}}" name="userId">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .container{
        margin-left: 250px;
    }
</style>
